<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_estate" model="ir.module.category">
        <field name="name">Royal Estate</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_estate_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_estate"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Read-only access to properties</field>
    </record>

    <record id="group_estate_agent" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="module_category_estate"/>
        <field name="implied_ids" eval="[(4, ref('group_estate_user'))]"/>
        <field name="comment">Can manage own properties</field>
    </record>

    <record id="group_estate_coordinator" model="res.groups">
        <field name="name">Coordinator</field>
        <field name="category_id" ref="module_category_estate"/>
        <field name="implied_ids" eval="[(4, ref('group_estate_agent'))]"/>
        <field name="comment">Can manage all properties</field>
    </record>

    <record id="group_estate_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_estate"/>
        <field name="implied_ids" eval="[(4, ref('group_estate_coordinator'))]"/>
        <field name="comment">Full access including deletion and configuration</field>
    </record>
</odoo>
