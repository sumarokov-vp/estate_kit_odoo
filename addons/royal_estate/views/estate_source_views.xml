<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_source_view_form" model="ir.ui.view">
        <field name="name">estate.source.form</field>
        <field name="model">estate.source</field>
        <field name="arch" type="xml">
            <form string="Source">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_source_view_list" model="ir.ui.view">
        <field name="name">estate.source.list</field>
        <field name="model">estate.source</field>
        <field name="arch" type="xml">
            <list string="Sources">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="estate_source_action" model="ir.actions.act_window">
        <field name="name">Sources</field>
        <field name="res_model">estate.source</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
